{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "allowUnreachableCode": false
  },
  "include": [
    "server.ts",
    "swagger.ts",
    "libs/**/*",
    "globals.d.ts",
    "swagger-output.json",
    "appsettings.json"
  ]
}